<div id="report-form" style="display: none;">
  <div class="container">
    <div id="report-form-inside" class="jumbotron">
      <button id="report-form-close-btn" type="button" class="close" aria-label="Close"><span aria-hidden="true">×</span></button>
      <% if user_signed_in? %>
        <%= form_for(@report, url: laboratory_reports_path(@labs)) do |f| %>
          <div class="form-group">
            <%= f.label :computer_id, 'Número da Máquina'%><br />
            <%= f.text_field :computer_id, class: "form-control" %>
          </div>

          <div style="dipslay:none" class="form-group">
            <%= f.label :laboratory_initials, 'Sigla do Laboratório'%><br />
            <%= f.text_field :laboratory_initials, :value => @labs.initials, :readonly => true , class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :description, 'Descrição'%><br />
            <%= f.text_area :description, class: "form-control"%>
          </div>

          <div class="actions">
            <%= f.submit "Registrar Report" , class: "btn btn-default"%>
          </div>
        <% end %>
      <% else %>
          <div class="alert alert-danger">
            <strong>Que loucura!</strong> Você esta acessando um espaço que é necessário estar autenticado.
          </div>
      <% end %>
    </div>
  </div>
</div>
